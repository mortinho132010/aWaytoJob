                    <viblendEditors:MaskEditor x:Name="MskTel2" Grid.ColumnSpan="3" Height="25" Margin="121.762,110,0,0" TextWrapping="Wrap" Text="MaskEditor" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" BorderBrush="#FFABADB3" Mask="(99)99999-9999" HorizontalAlignment="Left" Width="120" TabIndex="5" IsEnabled="False"/>
                    <viblendEditors:MaskEditor x:Name="MskTel3" Grid.ColumnSpan="3" Height="25" Margin="121.762,155,0,0" TextWrapping="Wrap" Text="MaskEditor" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" BorderBrush="#FFABADB3" Mask="(99)99999-9999" HorizontalAlignment="Left" Width="120" TabIndex="7" IsEnabled="False"/>
