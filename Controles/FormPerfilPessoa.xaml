                    <TextBox x:Name="TbNumero" Height="25" Margin="71,290,40,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" Grid.Column="2" TabIndex="13"/>
                    <Label Content="Data de Nascimento*:" HorizontalAlignment="Left" Margin="40,335,0,0" VerticalAlignment="Top" Height="25"/>
                    <viblendEditors:DateTimePicker x:Name="DtpData" HorizontalAlignment="Left" Margin="165,335,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" DefaultDateTimeFormat="ShortDatePattern" Culture="br" TabIndex="15" FontSize="16"/>
