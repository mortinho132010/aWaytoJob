                    <TextBox x:Name="TbBairro" Height="25" Margin="71,245,39,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" Grid.Column="2" TabIndex="11"/>
                    <Grid Grid.Column="2" Margin="62,335,0,0" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="89">
                        <Rectangle Fill="#FFF4F4F5" Stroke="Black" RadiusX="10" RadiusY="10"/>
                        <TextBlock Margin="10" TextWrapping="Wrap" TextAlignment="Center" Text="(*) Itens Obrigatórios"/>
                    </Grid>
                    <ComboBox x:Name="CmbEstado" Grid.Column="2" HorizontalAlignment="Left" Margin="71,200,0,0" VerticalAlignment="Top" Width="80" Height="25">
