                    <Label Content="LinkedIn:" HorizontalAlignment="Left" Margin="40,425,0,0" Height="25" VerticalAlignment="Top"/>
                    <TextBox x:Name="TbFacebook" Height="25" Margin="108,380,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" Grid.ColumnSpan="2" TabIndex="16"/>
                    <TextBox x:Name="TbLinkedin" Margin="108,425,0,0" FontFamily="Calibri" FontSize="16" Grid.ColumnSpan="2" TabIndex="17" Height="25" VerticalAlignment="Top"/>
                    <Button x:Name="SalvarInfo" Content="Salvar" Grid.Column="2" Margin="0,0,40,20" Style="{DynamicResource ConfirmarStyle}" Foreground="White" HorizontalAlignment="Right" Width="75" Height="25" VerticalAlignment="Bottom" Click="SalvarInfo_Click"/>
                    <TextBox x:Name="TbCEP" Height="25" Margin="108,200,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" TabIndex="0" HorizontalAlignment="Left" Width="106" PreviewKeyDown="TbCEP_PreviewKeyDown"/>
                    <Label Content="Telefone 1*:" HorizontalAlignment="Left" Margin="55,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.789,0.038" Height="25"/>
