        <RadioButton x:Name="RdIdioma" Content="Idiomas:" HorizontalAlignment="Left" Margin="40,90,0,0" VerticalAlignment="Top" Height="15" Checked="RdIdioma_Checked"/>
        <RadioButton x:Name="RdExperiencia" Content="Experiência:" HorizontalAlignment="Left" Margin="40,125,0,0" VerticalAlignment="Top" Height="15" Checked="RdExperiencia_Checked"/>

    </Grid>
</UserControl>
